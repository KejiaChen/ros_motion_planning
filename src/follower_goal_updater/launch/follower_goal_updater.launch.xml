<launch>
  <arg name="leader" default="robot1" />
  <arg name="follower" default="robot2" />
  <arg name="offset" default="-1.0" />
    <!-- move base module -->
    <node pkg="follower_goal_updater" type="follower_goal_updater_node" respawn="false" name="follower_goal_updater" output="screen">
        <param name="leader_pose_topic" value="$(arg leader)/amcl_pose" />
        <param name="goal_pub_topic" value="$(arg follower)/move_base_follow_simple/goal" />
        <param name="offset" value="$(arg offset)" />
    </node>
</launch>